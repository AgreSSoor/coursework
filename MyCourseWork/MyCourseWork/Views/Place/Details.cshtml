@model Core.DbModels.Place

@{
    ViewData["Title"] = "Details";
}

<h1>Детали</h1>

<div>
    <h4>Магазин</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Название
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Телефоны
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phones)
        </dd>
        <dt class="col-sm-2">
            Специализация
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Specialisation)
        </dd>
        <dt class="col-sm-2">
            Тип собственности
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OwnerShipType)
        </dd>
        <dt class="col-sm-2">
            Время работы
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WorkTime)
        </dd>
        <dt class="col-sm-2">
            Ссылка
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.URL)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-info mr-1 ml-1">Изменть</a>
    }
    <a asp-action="Index" class="btn btn-info mr-1 ml-1">Вернуться к списку</a>
</div>
