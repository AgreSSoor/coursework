@model Core.DbModels.Place

@{
    ViewData["Title"] = "Create";
}

<h1>Добавление магазина</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Название</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Телефон</label>
                <input asp-for="Phones" class="form-control" />
                <span asp-validation-for="Phones" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Специализация</label>
                <input asp-for="Specialisation" class="form-control" />
                <span asp-validation-for="Specialisation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Тип собственности</label>
                <input asp-for="OwnerShipType" class="form-control" />
                <span asp-validation-for="OwnerShipType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Рабочее время</label>
                <input asp-for="WorkTime" class="form-control" />
                <span asp-validation-for="WorkTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="URL" class="control-label"></label>
                <input asp-for="URL" class="form-control" />
                <span asp-validation-for="URL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
                 <a asp-action="Index" class="btn btn-danger mr-1">Вернуться обратно</a>
            </div>
        </form>
    </div>
</div>

<div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
