@model Core.DbModels.Product

@{
    ViewData["Title"] = "Delete";
}

<h1>Удаление</h1>

<h3>Подтверждение удаления</h3>
<div>
    <h4>Продукт</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Наименование
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Цена
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            Описание
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Название магазина
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Place.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete" asp-controller="Product">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger mr-1 ml-1" /> |
        <a asp-action="Index" class=" btn btn-info mr-1 ml-1">Вернуться к списку</a>
    </form>
</div>
