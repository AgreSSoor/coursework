<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyCourseWork</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav  class="navbar navbar-expand-sm navbar-toggleable-sm bg-dark navbar-light border-bottom box-shadow mb-3">
            <div class="container">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="nav-link ml-2  text-light" asp-area="" asp-controller="Place" asp-action="GetAll">Магазины</a>
                        
                    @if (User.IsInRole("admin"))
                    {
                        <a class="nav-link  ml-2  text-light" asp-area="" asp-controller="Admin" asp-action="GetAll">Список аккаунтов</a>
                    }
                        <a class="nav-link  ml-2  text-light" asp-area="" asp-controller="Product" asp-action="Index">Список товаров</a>
                        
                        <a class="nav-link  ml-2  text-light" asp-area="" asp-controller="Cart" asp-action="Index">Корзина</a>
                        
                        <a class="btn btn-primary  text-light" asp-area="" asp-controller="Account" asp-action="Logout">Выйти</a>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - MyCourseWork - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
